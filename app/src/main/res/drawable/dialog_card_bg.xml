<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- rounded corners -->
    <corners android:radius="22dp"/>

    <!-- semi-transparent dark gray to match your app style -->
    <solid android:color="#1A000000"/>
    <!-- (1A = 10% opacity; adjust to #33000000 if you want darker) -->

    <!-- subtle border to blend with PlantApp aesthetic -->
    <stroke
        android:width="1dp"
        android:color="#264935"/>

    <!-- padding inside the card -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
