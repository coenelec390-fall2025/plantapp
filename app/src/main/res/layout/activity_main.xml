<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg_gradient"
    tools:context=".MainActivity">

    <!-- Profile Button -->
    <ImageButton
        android:id="@+id/ProfileButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:src="@drawable/ic_profile_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#E8F5E9" />

    <!-- Title -->
    <TextView
        android:id="@+id/SureLeafTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SureLeaf"
        android:textColor="#6EF7A7"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ProfileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/RoleSelectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your role"
        android:textColor="#A5D6A7"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/SureLeafTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Role Card -->
    <LinearLayout
        android:id="@+id/RoleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_card_bg"
        android:padding="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/RoleSelectTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row: spinner + info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/RoleSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:popupBackground="@drawable/role_spinner_popup_bg" />

            <ImageButton
                android:id="@+id/InfoButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_marginStart="8dp"
                app:tint="#E8F5E9" />
        </LinearLayout>
    </LinearLayout>

    <!-- My Garden -->
    <LinearLayout
        android:id="@+id/GardenCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_card_bg"
        android:padding="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/RoleCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/GardenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Garden"
            android:textColor="#E8F5E9"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="6dp" />

        <FrameLayout
            android:id="@+id/GardenFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/GardenScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/GardenStrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/GardenEmptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plants identified with over 50% confidence are added to your garden!"
                android:textColor="#B0BEC5"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="8dp" />
        </FrameLayout>
    </LinearLayout>

    <!-- "Point your camera" EXACTLY above button -->
    <TextView
        android:id="@+id/CameraDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point your camera at a plant to begin"
        android:textColor="#B0BEC5"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/CameraButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Camera button -->
    <ImageButton
        android:id="@+id/CameraButton"
        android:layout_width="137dp"
        android:layout_height="131dp"
        android:background="@drawable/camera_button_bg"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="24dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>
