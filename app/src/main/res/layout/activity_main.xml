<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_gradient_teal_blue"
    tools:context=".MainActivity">

    <!-- Profile Button (unchanged ID) -->
    <ImageButton
        android:id="@+id/ProfileButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="Profile"
        android:src="@drawable/ic_profile_icon"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#FFFFFF" />

    <!-- Title (unchanged ID) -->
    <TextView
        android:id="@+id/SureLeafTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SureLeaf"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ProfileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle (unchanged ID) -->
    <TextView
        android:id="@+id/RoleSelectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Role"
        android:textColor="#AEEEEE"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/SureLeafTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spinner (unchanged ID) -->
    <Spinner
        android:id="@+id/RoleSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_dark"
        android:padding="12dp"
        app:layout_constraintWidth_min="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/RoleSelectTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camera instructions (unchanged ID) -->
    <TextView
        android:id="@+id/CameraDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press the camera button to get started"
        android:textColor="#BFFCF6"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/CameraButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camera Button (unchanged ID) -->
    <ImageButton
        android:id="@+id/CameraButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/camera_button_bg_teal"
        android:contentDescription="Open Camera"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#FFFFFF" />



</androidx.constraintlayout.widget.ConstraintLayout>
