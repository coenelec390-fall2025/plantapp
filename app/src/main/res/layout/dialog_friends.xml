<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="0dp">

    <!-- CARD ONLY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_card_bg"
        android:padding="20dp"
        android:elevation="12dp">

        <TextView
            android:id="@+id/friendsDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friend Requests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E8F5E9"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#264935"
            android:layout_marginBottom="12dp" />

        <!-- Incoming -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incoming Requests"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#E8F5E9"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:id="@+id/incomingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="#264935"
            android:showDividers="none"
            android:layout_marginBottom="16dp" />

        <!-- Outgoing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outgoing Requests"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#E8F5E9"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:id="@+id/outgoingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="#264935"
            android:showDividers="none"
            android:layout_marginBottom="20dp" />

        <!-- Send Request button -->
        <Button
            android:id="@+id/sendRequestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send New Friend Request"
            android:textStyle="bold"
            android:backgroundTint="#47D04C"
            android:textColor="#001018"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
