<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/profile_card_bg">

        <TextView
            android:id="@+id/titleFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friend Requests"
            android:textColor="#E8F5E9"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incoming Requests"
            android:textColor="#E8F5E9"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <ListView
            android:id="@+id/incomingListView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:divider="#264935"
            android:dividerHeight="1dp"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outgoing Requests"
            android:textColor="#E8F5E9"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <ListView
            android:id="@+id/outgoingListView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:divider="#264935"
            android:dividerHeight="1dp"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <!-- Single long button -->
        <Button
            android:id="@+id/buttonOpenSendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Send Request"
            android:backgroundTint="#47D04C"
            android:textColor="#001018"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>
