<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="24dp"
    tools:context=".DescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/BackButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_media_previous"
                app:tint="#2E7D32"
                android:contentDescription="Back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/PlantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant Details"
                android:textColor="#2E7D32"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/PlantImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:background="@drawable/image_placeholder_bg"
                android:scaleType="centerCrop"
                app:layout_constraintWidth_percent="0.85" />

            <TextView
                android:id="@+id/PlantNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Name"
                android:textColor="#1B5E20"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/PlantScientificNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="#388E3C"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/ConfidenceBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/green_progress_bg"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/ConfidenceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Confidence:"
                android:textColor="#2E7D32"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/PlantDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_list_bg"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:textColor="#2E7D32"
                android:textSize="16sp" />

            <Button
                android:id="@+id/TakeAnotherPictureButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take Another Picture"
                android:backgroundTint="#66BB6A"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
