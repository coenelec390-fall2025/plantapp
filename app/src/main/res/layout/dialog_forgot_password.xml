<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/profile_card_bg">

    <TextView
        android:id="@+id/textForgotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textColor="#E8F5E9"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textForgotSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email and weâ€™ll send you a reset link."
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTextDialogEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#90FFFFFF"
        android:background="@drawable/history_item_bg"
        android:padding="10dp"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/buttonDialogReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send reset link"
        android:textAllCaps="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:backgroundTint="#57C35B"
        android:textColor="#001018" />



</LinearLayout>
